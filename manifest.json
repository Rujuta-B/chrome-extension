{
  "manifest_version": 3,
  "name": "Dark Mode Extension",
  "version": "1.0",
  "description": "Enable dark mode on any website.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "check.png",
      "48": "search.png",
      "128": "menu-burger.png"
    }
  },
  "icons": {
    "16": "check.png",
    "48": "search.png",
    "128": "menu-burger.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],

      "css": ["styles.css"]
    }
  ]
}
